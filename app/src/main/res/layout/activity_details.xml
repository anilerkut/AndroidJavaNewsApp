<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_red"
        android:minHeight="?attr/actionBarSize"
        android:fontFamily="@font/berkshire_swash"
        android:theme="?attr/actionBarTheme" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/detail_image"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">
            </ImageView>
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lelelele"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/app_red">
            </TextView>
            <TextView
                android:id="@+id/detail_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ben authorum"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textAlignment="viewEnd"
                android:layout_marginTop="5dp"
                android:paddingRight="20dp"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/detail_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="12dp"
                android:textSize="22dp"
                android:text="asdplğasdlpğasdplğasdlpğasldpğadğ"
                >
            </TextView>
            <TextView
                android:id="@+id/detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="12dp"
                android:textSize="22dp"
                android:text="asdplğasdlpğasdplğasdlpğasldpğadğ"
                >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="Published At:  "
                    android:textSize="16dp"
                    android:textColor="@color/app_red">-
                </TextView>
                <TextView
                    android:id="@+id/detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ben authorum"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    >
                </TextView>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:id="@+id/goToUrlButton"
                android:layout_marginTop="15dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/url_button"
                android:textColor="@color/white"
                android:text="Go To URL" />



        </LinearLayout>
    </ScrollView>



</LinearLayout>